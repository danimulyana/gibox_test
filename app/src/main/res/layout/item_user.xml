<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:padding="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/img_name_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_person"
        app:tint="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cv_container"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        tools:text="Username"
        app:layout_constraintStart_toEndOf="@id/img_name_icon"
        app:layout_constraintTop_toTopOf="@id/img_name_icon"
        app:layout_constraintBottom_toBottomOf="@id/img_name_icon"/>

    <ImageView
        android:id="@+id/img_mail_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_mail"
        app:tint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/img_name_icon"
        app:layout_constraintStart_toEndOf="@id/cv_container"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        tools:text="Email"
        app:layout_constraintStart_toEndOf="@id/img_mail_icon"
        app:layout_constraintTop_toTopOf="@id/img_mail_icon"
        app:layout_constraintBottom_toBottomOf="@id/img_mail_icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>
